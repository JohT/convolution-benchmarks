{
  "name": "benchmark-chart",
  "version": "1.0.0",
  "description": "Create charts from benchmark data",
  "repository": {
    "type": "git",
    "url": "https://github.com/JohT/convolution-benchmarks.git"
  },
  "config": {
    "BenchmarkReportDirectoryDefault": "./../build/benchmark",
    "BenchmarkReportDirectoryWindows": "..\\build\\benchmark",
    "BenchmarkReportFile": "benchmark-report.xml"
  },
  "scripts": {
    "build": "npm run create-benchmark-charts",
    "convert-xml-to-json": "npm-run-all convert-xml-to-chart-json convert-xml-to-data-json",
    "convert-xml-to-chart-json": "run-script-os",
    "convert-xml-to-chart-json:windows": "convert-xml-to-json %npm_package_config_BenchmarkReportDirectoryWindows%\\%npm_package_config_BenchmarkReportFile% %npm_package_config_BenchmarkReportDirectoryWindows%\\benchmark-report.json",
    "convert-xml-to-chart-json:default": "convert-xml-to-json ${npm_package_config_BenchmarkReportDirectoryDefault}/${npm_package_config_BenchmarkReportFile} ${npm_package_config_BenchmarkReportDirectoryDefault}/benchmark-report.json",
    "convert-xml-to-data-json": "run-script-os",
    "convert-xml-to-data-json:windows": "nodenv -E ./../build/HostSystemInfo.env --exec convert-xml-to-json -- %npm_package_config_BenchmarkReportDirectoryWindows%\\%npm_package_config_BenchmarkReportFile% %npm_package_config_BenchmarkReportDirectoryWindows%\\benchmark-report-%BUILD_HOST_COMPILER%-%BUILD_HOST_OPERATING_SYSTEM%-%BUILD_HOST_PROCESSOR_ARCHITECTURE%%BUILD_HOST_VECTOR_EXTENSION%.json",
    "convert-xml-to-data-json:default": "nodenv -E ./../build/HostSystemInfo.env --exec convert-xml-to-json -- '${npm_package_config_BenchmarkReportDirectoryDefault}/${npm_package_config_BenchmarkReportFile}' '${npm_package_config_BenchmarkReportDirectoryDefault}/benchmark-report-$BUILD_HOST_COMPILER-$BUILD_HOST_OPERATING_SYSTEM-$BUILD_HOST_PROCESSOR_ARCHITECTURE$BUILD_HOST_VECTOR_EXTENSION.json'",
    "generate-svg-chart": "run-script-os",
    "generate-svg-chart:windows": "nodenv -E ./../build/HostSystemInfo.env --exec vl2svg -- BenchmarkChartHorizontal.json %npm_package_config_BenchmarkReportDirectoryWindows%\\BenchmarkChart-%BUILD_HOST_COMPILER%-%BUILD_HOST_OPERATING_SYSTEM%-%BUILD_HOST_PROCESSOR_ARCHITECTURE%%BUILD_HOST_VECTOR_EXTENSION%.svg",
    "generate-svg-chart:default": "nodenv -E ./../build/HostSystemInfo.env --exec vl2svg -- 'BenchmarkChartHorizontal.json' '${npm_package_config_BenchmarkReportDirectoryDefault}/BenchmarkChart-$BUILD_HOST_COMPILER-$BUILD_HOST_OPERATING_SYSTEM-$BUILD_HOST_PROCESSOR_ARCHITECTURE$BUILD_HOST_VECTOR_EXTENSION.svg'",
    "copy-all": "npm-run-all copy-charts-svg copy-charts-json",
    "copy-charts-svg": "cross-var copyfiles --verbose --flat ${npm_package_config_BenchmarkReportDirectoryDefault}/*.svg ./image/svg",
    "copy-charts-json": "cross-var copyfiles --verbose --flat ${npm_package_config_BenchmarkReportDirectoryDefault}/benchmark-report-*.json ./data",
    "create-benchmark-charts": "npm-run-all convert-xml-to-json generate-svg-chart copy-all"
  },
  "author": "JohT",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "convert-xml-to-json": "1.0.0",
    "copyfiles": "2.4.1",
    "cross-var": "^1.1.0",
    "node-env-run": "4.0.2",
    "npm-run-all": "4.1.5",
    "run-script-os": "1.1.6",
    "vega": "^5.22.1",
    "vega-lite": "5.3.0"
  }
}
