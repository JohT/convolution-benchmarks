{
  "name": "benchmark-chart",
  "version": "1.0.0",
  "description": "Create charts from benchmark data",
  "repository": {
    "type": "git",
    "url": "https://github.com/JohT/convolution-benchmarks.git"
  },
  "config": {
    "BenchmarkReportEnvironmentFile": "./../build/HostSystemInfo.env"
  },
  "scripts": {
    "build": "npm run create-benchmark-charts",
    "convert-xml-to-json": "npm-run-all convert-xml-to-chart-json convert-xml-to-data-json",
    "convert-xml-to-chart-json": "cross-var nodenv -E $npm_package_config_BenchmarkReportEnvironmentFile --exec run-script-os",
    "convert-xml-to-chart-json:windows": "convert-xml-to-json %BENCHMARK_CHART_DIRECTORY%\\%BENCHMARK_RESULTS_XML_FILE% %BENCHMARK_CHART_DIRECTORY%\\benchmark-report.json",
    "convert-xml-to-chart-json:default": "convert-xml-to-json $BENCHMARK_CHART_DIRECTORY/$BENCHMARK_RESULTS_XML_FILE $BENCHMARK_CHART_DIRECTORY/benchmark-report.json",
    "convert-xml-to-data-json": "cross-var nodenv -E $npm_package_config_BenchmarkReportEnvironmentFile --exec run-script-os",
    "convert-xml-to-data-json:windows": "convert-xml-to-json %BENCHMARK_CHART_DIRECTORY%\\%BENCHMARK_RESULTS_XML_FILE% %BENCHMARK_CHART_DIRECTORY%\\benchmark-report-%BENCHMARK_CHART_POSTFIX%.json",
    "convert-xml-to-data-json:default": "convert-xml-to-json $BENCHMARK_CHART_DIRECTORY/$BENCHMARK_RESULTS_XML_FILE $BENCHMARK_CHART_DIRECTORY/benchmark-report-$BENCHMARK_CHART_POSTFIX.json",
    "generate-svg-chart": "cross-var nodenv -E $npm_package_config_BenchmarkReportEnvironmentFile --exec run-script-os",
    "generate-svg-chart:windows": "vl2svg BenchmarkChartHorizontal.json %BENCHMARK_CHART_DIRECTORY%\\BenchmarkChart-%BENCHMARK_CHART_POSTFIX%.svg",
    "generate-svg-chart:default": "vl2svg BenchmarkChartHorizontal.json $BENCHMARK_CHART_DIRECTORY/BenchmarkChart-$BENCHMARK_CHART_POSTFIX.svg",
    "copy-all": "npm-run-all copy-charts-svg copy-charts-json",
    "copy-charts-svg": "cross-var nodenv -E $npm_package_config_BenchmarkReportEnvironmentFile --exec run-script-os",
    "copy-charts-svg:default": "cross-var copyfiles --verbose --flat $BENCHMARK_CHART_DIRECTORY/*.svg ./image/svg",
    "copy-charts-json": "cross-var nodenv -E $npm_package_config_BenchmarkReportEnvironmentFile --exec run-script-os",
    "copy-charts-json:default": "cross-var copyfiles --verbose --flat $BENCHMARK_CHART_DIRECTORY/benchmark-report-*.json ./data",
    "create-benchmark-charts": "npm-run-all convert-xml-to-json generate-svg-chart copy-all"
  },
  "author": "JohT",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "convert-xml-to-json": "1.0.0",
    "copyfiles": "2.4.1",
    "cross-var": "^1.1.0",
    "node-env-run": "4.0.2",
    "npm-run-all": "4.1.5",
    "run-script-os": "1.1.6",
    "vega": "^5.22.1",
    "vega-lite": "5.3.0"
  }
}
