{
  "name": "benchmark-chart",
  "version": "1.0.0",
  "description": "Create charts from benchmark data",
  "repository": {
    "type": "git",
    "url": "https://github.com/JohT/getting-started-with-simd.git"
  },
  "scripts": {
    "test": "npm run run-benchmarks",
    "create-benchmark-directory": "mkdirp ../build/benchmark",
    "run-benchmarks": "../build/test/GettingStartedWithSIMDTests [performance] --reporter XML::out=../build/benchmark/benchmark-report.xml --reporter console::out=-::colour-mode=ansi",
    "convert-xml-to-json": "convert-xml-to-json ../build/benchmark/benchmark-report.xml ../build/benchmark/benchmark-report.json",
    "generate-png-chart": "vl2png BenchmarkChart.json ../build/benchmark/BenchmarkChart.png",
    "generate-svg-chart": "vl2svg BenchmarkChart.json ../build/benchmark/BenchmarkChart.svg",
    "copy-charts": "copyfiles --verbose --flat ../build/benchmark/BenchmarkChart.png ../build/benchmark/BenchmarkChart.svg .",
    "create-benchmark-charts": "npm run create-benchmark-directory && npm run run-benchmarks && npm run convert-xml-to-json && npm run generate-png-chart && npm run generate-svg-chart && npm run copy-charts"
  },
  "author": "JohT",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "convert-xml-to-json": "^1.0.0",
    "copyfiles": "^2.4.1",
    "mkdirp": "^1.0.4",
    "vega-lite": "^5.3.0"
  }
}
